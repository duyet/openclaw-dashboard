{
  "name": "openclaw-mission-control",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "fmt": "biome format --write .",
    "fix": "biome check --write .",
    "lint": "biome lint .",
    "test": "vitest run --passWithNoTests --coverage",
    "test:watch": "vitest",
    "dev:lan": "next dev --hostname 0.0.0.0 --port 3000",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "cf:dev": "wrangler pages dev .vercel/output/static --d1 DB --kv KV --queue WEBHOOK_QUEUE",
    "cf:build": "bunx @cloudflare/next-on-pages",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply openclaw-mc --local",
    "db:migrate:local": "wrangler d1 migrations apply openclaw-mc --local"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.3",
    "@cloudflare/next-on-pages": "^1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-table": "^8.21.3",
    "cmdk": "^1.1.1",
    "drizzle-orm": "^0.44",
    "next": "^15.3.4",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-is": "^19.2.4",
    "react-markdown": "^10.1.0",
    "recharts": "^3.7.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3"
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.35",
    "@cloudflare/workers-types": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "@biomejs/biome": "^2.0.0",
    "autoprefixer": "^10.4.24",
    "bun-types": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cypress": "^14.5.4",
    "drizzle-kit": "^0.31",
    "jsdom": "^25.0.1",
    "lucide-react": "^0.563.0",
    "orval": "^8.3.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wrangler": "^4"
  }
}
